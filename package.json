{
  "name": "measurement",
  "description": "A flexible library for handling unit conversions",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Joel Felsinger <jffelsinger@gmail.com> (joelfredrick.com)",
  "keywords": [
    "measurement",
    "measurements",
    "metric",
    "conversions"
  ],
  "main": "dist/cjs/measurement.js",
  "module": "dist/esm/measurement.js",
  "types": "dist/types/measurement.d.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:types && npm run build:esm && build:rollup",
    "build:types": "rm -rf dist/types && tsc -p tsconfig.types.json",
    "build:cjs": "rm -rf dist/cjs && tsc -p tsconfig.cjs.json",
    "build:esm": "rm -rf dist/esm && tsc -p tsconfig.esm.json",
    "build:rollup": "rollup --config",
    "test": "nyc mocha",
    "test:mocha": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jfelsinger/measurement.git"
  },
  "bugs": "https://github.com/jfelsinger/measurement/issues",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
